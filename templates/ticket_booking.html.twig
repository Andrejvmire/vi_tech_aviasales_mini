{% extends "base.html.twig" %}

{% block title_prefix %}Бронирование билета{% endblock %}

{% block main %}
    {{ form_start(ticket_booking_form) }}
        <div class="row col-md-6">
            <div class="row">
                <h1 class="h3 mb-3 font-weight-normal">Рейс</h1>
            </div>
            <div class="row">
                <div class="col-8">
                    {{ form_label(ticket_booking_form.flight_id) }}
                    {{ form_widget(ticket_booking_form.flight_id) }}
                    {{ form_errors(ticket_booking_form.flight_id) }}
                </div>
                <div class="col-4">
                    {{ form_label(ticket_booking_form.date) }}
                    {{ form_widget(ticket_booking_form.date, {
                        "attr": {
                            "min": date()|date("Y-m-d")
                        }
                    }) }}
                    {{ form_errors(ticket_booking_form.date) }}
                </div>
            </div>
            <div class="row mt-3">
                <h1 class="h3 mb-3 font-weight-normal">Пассажир</h1>
            </div>
            <div class="row">
                <div class="col-8">
                    {{ form_widget(ticket_booking_form.passenger_id) }}
                    {{ form_errors(ticket_booking_form.passenger_id) }}
                </div>
            </div>
            <div class="row mt-2">
                <a href="{{ path('app.passenger') }}">Добавить нового пассажира в систему +</a>
            </div>
        </div>
        <div class="row justify-content-center mt-3">
            {{ form_widget(ticket_booking_form.submit) }}
        </div>
    {{ form_end(ticket_booking_form) }}
{% endblock %}