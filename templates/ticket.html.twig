{% extends 'base.html.twig' %}

{% block title_prefix %}Билет{% endblock %}
{% block title_postfix %}успешно забронирован{% endblock %}

{% block main %}
    <div class="row">
        <p class="h3 mb-3">{{ ticket.passenger }})</p>
    </div>
    <div class="row">
        <p class="h4 mb-3 text-decoration-underline">Билет:</p>
        <p class="h4 mb-3">{{ ticket.date|date('d.m.Y') }}</p>
        <p class="h4 mb-3">
            {{ ticket.flight }})
        </p>
        <p class="h4 font-weight-normal">Цена: {{ ticket.price }} рублей</p>
    </div>
{% endblock %}